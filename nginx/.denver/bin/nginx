#!/usr/bin/env sh

projectRootPath=$(cd "$(dirname "$0")/../.."; pwd)
# used in .env file
realUser=${SUDO_USER:-$USER}
dockerUser=${DOCKER_ID_USER:-$realUser}
network=${DE_NETWORK_NAME:-$DE_NGINX_NETWORK_NAME}
runArgs="${DE_NGINX_RUN_ARGS} ${DE_RUN_ARGS}"

denver_nginx_printenv() {
  printenv | grep -E '^DE_NGINX_'
  echo
}

denver_nginx_build() {
  local argsMsg="without args"
  [ $# -ne 0 ] && argsMsg="with args $@"

  echo "Building image \
\"${DE_NGINX_SCOPE}/${DE_NGINX_NAME}\" \
${argsMsg}..."
  echo

  sudo docker build \
    -t ${DE_NGINX_SCOPE}/${DE_NGINX_NAME} \
    "$@" \
    $projectRootPath

  return 0
}

denver_nginx_remove() {
  echo "Removing image \
\"${DE_NGINX_SCOPE}/${DE_NGINX_NAME}\"..."
  echo

  sudo docker image rm \
    -f ${DE_NGINX_SCOPE}/${DE_NGINX_NAME}

  return 0
}

denver_nginx_create_network() {
  sudo docker network create \
    --driver bridge \
    ${DE_NGINX_NETWORK_NAME} 2> /dev/null && \
    echo "Created network \"${DE_NGINX_NETWORK_NAME}\"! Using it..." || \
    echo "Using network \"${DE_NGINX_NETWORK_NAME}\"..."

  echo
}

denver_nginx_run() {
  local cmd=${1:-$DE_NGINX_DEFAULT_COMMAND}
  [ $# -ne 0 ] && shift

  local argsMsg="without args"
  [ $# -ne 0 ] && argsMsg="with args $@"

  echo "Running container \
\"${DE_NGINX_SCOPE}_${DE_NGINX_NAME}\""
  echo "  based on image \
\"${DE_NGINX_SCOPE}/${DE_NGINX_NAME}\""
  echo "  with command \"${cmd}\" ${argsMsg}..."
  echo

  denver_nginx_create_network

  sudo docker run \
    -it \
    --rm \
    --name "${DE_NGINX_SCOPE}_${DE_NGINX_NAME}" \
    --network ${DE_NGINX_NETWORK_NAME} \
    -h "denver-${DE_NGINX_NAME}" \
    -p ${DE_NGINX_SSH_PORT}:22 \
    -v ${DE_NGINX_VOLUME_APP}:/app \
    -v ${DE_NGINX_VOLUME_WORKSPACE}:/workspace \
    ${DE_NGINX_RUN_ARGS} \
    ${DE_NGINX_SCOPE}/${DE_NGINX_NAME} \
    ${cmd} \
    "$@"

  return 0
}

denver_nginx_stop() {
  echo "Stopping container \
\""${DE_NGINX_SCOPE}_${DE_NGINX_NAME}"\"..."
  echo

  sudo docker container stop \
    "${DE_NGINX_SCOPE}_${DE_NGINX_NAME}"

  return 0
}

denver_nginx_main() {
  local runner=${1:-"run"}

  if [ -s "$projectRootPath/.env" ] 
  then
    eval $(env "$(cat "$projectRootPath/.env"; env)" | grep -E '^(DE_|DOCKER_)' | sed 's/^\(.\+=\)\("\?\)\([^"$]\+\)\("\?\)$/export \1"\3"/')
  fi

  [ "$runner" != 'printenv' ] &&
    denver_nginx_printenv

  {
    [ $# -ne 0 ] && shift
    denver_nginx_${runner} "$@" 2>/dev/null
  } || denver_nginx_run $runner "$@"

  return 0
}
denver_nginx_main "$@"

