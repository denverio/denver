#!/usr/bin/env sh

projectRootPath=$(cd "$(dirname "$0")/../.."; pwd)
# used in .env file
realUser=${SUDO_USER:-$USER}
dockerUser=${DOCKER_ID_USER:-$realUser}
network=${DE_NETWORK_NAME:-$DE_BASH_NETWORK_NAME}
runArgs="${DE_BASH_RUN_ARGS} ${DE_RUN_ARGS}"
rootVolumeApp=${DE_ROOT_VOLUME_APP:-$HOME}

denver_bash_printenv() {
  printenv | grep -E '^DE_BASH_'
  echo
}

denver_bash_build() {
  local argsMsg="without args"
  [ $# -ne 0 ] && argsMsg="with args $@"

  echo "Building image \
\"${DE_BASH_SCOPE}/${DE_BASH_NAME}\" \
${argsMsg}..."
  echo

  sudo docker build \
    -t ${DE_BASH_SCOPE}/${DE_BASH_NAME} \
    "$@" \
    $projectRootPath

  return 0
}

denver_bash_remove() {
  echo "Removing image \
\"${DE_BASH_SCOPE}/${DE_BASH_NAME}\"..."
  echo

  sudo docker image rm \
    -f ${DE_BASH_SCOPE}/${DE_BASH_NAME}

  return 0
}

denver_bash_create_network() {
  sudo docker network create \
    --driver bridge \
    ${DE_BASH_NETWORK_NAME} 2> /dev/null && \
    echo "Created network \"${DE_BASH_NETWORK_NAME}\"! Using it..." || \
    echo "Using network \"${DE_BASH_NETWORK_NAME}\"..."

  echo
}

denver_bash_run() {
  local cmd=${1:-$DE_BASH_DEFAULT_COMMAND}
  [ $# -ne 0 ] && shift

  local argsMsg="without args"
  [ $# -ne 0 ] && argsMsg="with args $@"

  echo "Running container \
\"${DE_BASH_SCOPE}_${DE_BASH_NAME}\""
  echo "  based on image \
\"${DE_BASH_SCOPE}/${DE_BASH_NAME}\""
  echo "  with command \"${cmd}\" ${argsMsg}..."
  echo

  denver_bash_create_network

  sudo docker run \
    -it \
    --rm \
    --name "${DE_BASH_SCOPE}_${DE_BASH_NAME}" \
    --network ${DE_BASH_NETWORK_NAME} \
    -h "denver-${DE_BASH_NAME}" \
    -p ${DE_BASH_SSH_PORT}:22 \
    -v ${DE_BASH_VOLUME_APP}:/app \
    -v ${DE_BASH_VOLUME_WORKSPACE}:/workspace \
    ${DE_BASH_RUN_ARGS} \
    ${DE_BASH_SCOPE}/${DE_BASH_NAME} \
    ${cmd} \
    "$@"

  return 0
}

denver_bash_stop() {
  echo "Stopping container \
\""${DE_BASH_SCOPE}_${DE_BASH_NAME}"\"..."
  echo

  sudo docker container stop \
    "${DE_BASH_SCOPE}_${DE_BASH_NAME}"

  return 0
}

denver_bash_main() {
  local runner=${1:-"run"}

  if [ -s "$projectRootPath/.env" ] 
  then
    eval $(env "$(cat "$projectRootPath/.env"; env)" | grep -E '^(DE_|DOCKER_)' | sed 's/^\(.\+=\)\("\?\)\([^"$]\+\)\("\?\)$/export \1"\3"/')
  fi

  [ "$runner" != 'printenv' ] &&
    denver_bash_printenv

  {
    [ $# -ne 0 ] && shift
    denver_bash_${runner} "$@" 2>/dev/null
  } || denver_bash_run $runner "$@"

  return 0
}
denver_bash_main "$@"

