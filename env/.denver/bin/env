#!/usr/bin/env sh

projectRootPath=$(cd "$(dirname "$0")/../.."; pwd)
# used in .env file
realUser=${SUDO_USER:-$USER}
dockerUser=${DOCKER_ID_USER:-$realUser}
network=${DE_NETWORK_NAME:-$DE_ENV_NETWORK_NAME}

denver_env_printenv() {
  printenv | grep -E '^DE_ENV_'
  echo
}

denver_env_build() {
  local argsMsg="without args"
  [ $# -ne 0 ] && argsMsg="with args $@"

  echo "Building image \
\"${DE_ENV_SCOPE}/${DE_ENV_NAME}\" \
${argsMsg}..."
  echo

  sudo docker build \
    -t ${DE_ENV_SCOPE}/${DE_ENV_NAME} \
    "$@" \
    $projectRootPath

  return 0
}

denver_env_remove() {
  echo "Removing image \
\"${DE_ENV_SCOPE}/${DE_ENV_NAME}\"..."
  echo

  sudo docker image rm \
    -f ${DE_ENV_SCOPE}/${DE_ENV_NAME}

  return 0
}

denver_env_create_network() {
  sudo docker network create \
    --driver bridge \
    ${DE_ENV_NETWORK_NAME} 2> /dev/null && \
    echo "Created network \"${DE_ENV_NETWORK_NAME}\"! Using it..." || \
    echo "Using network \"${DE_ENV_NETWORK_NAME}\"..."

  echo
}

denver_env_run() {
  local cmd=${1:-$DE_ENV_DEFAULT_COMMAND}
  [ $# -ne 0 ] && shift

  local argsMsg="without args"
  [ $# -ne 0 ] && argsMsg="with args $@"

  echo "Running container \
\"${DE_ENV_SCOPE}_${DE_ENV_NAME}\""
  echo "  based on image \
\"${DE_ENV_SCOPE}/${DE_ENV_NAME}\""
  echo "  with command \"${cmd}\" ${argsMsg}..."
  echo

  denver_env_create_network

  sudo docker run \
    -it \
    --rm \
    --name "${DE_ENV_SCOPE}_${DE_ENV_NAME}" \
    --network ${DE_ENV_NETWORK_NAME} \
    -h "denver-${DE_ENV_NAME}" \
    -p ${DE_ENV_SSH_PORT}:22 \
    -v ${DE_ENV_VOLUME_APP}:/app \
    -v ${DE_ENV_VOLUME_WORKSPACE}:/workspace \
    ${DE_ENV_SCOPE}/${DE_ENV_NAME} \
    ${cmd} \
    "$@"

  return 0
}

denver_env_stop() {
  echo "Stopping container \
\""${DE_ENV_SCOPE}_${DE_ENV_NAME}"\"..."
  echo

  sudo docker container stop \
    "${DE_ENV_SCOPE}_${DE_ENV_NAME}"

  return 0
}

denver_env_main() {
  local runner=${1:-"run"}

  if [ -s "$projectRootPath/.env" ] 
  then
    eval $(env "$(cat "$projectRootPath/.env"; env)" | grep -E '^(DE_|DOCKER_)' | sed 's/^/export /')
  fi

  [ "$runner" != 'printenv' ] &&
    denver_env_printenv

  {
    [ $# -ne 0 ] && shift
    denver_env_${runner} "$@" 2>/dev/null
  } || denver_env_run $runner "$@"

  return 0
}
denver_env_main "$@"

